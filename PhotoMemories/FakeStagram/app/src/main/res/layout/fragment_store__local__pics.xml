<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Store_Local_Pics">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

           <EditText
               android:id="@+id/txt_SqlImageName"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:hint="Image Name"
               android:textColorHint="@color/white"/>

            <ImageView
                android:id="@+id/img_ImagePane"
                android:layout_width="375dp"
                android:layout_height="368dp"
                android:layout_gravity="center"
                android:src="@drawable/photo" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_save_SQL_Image"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:src="@drawable/small_save" />

        <ImageView
            android:id="@+id/img_choose_SQL_Image"
            android:layout_width="84dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="140dp"
            android:src="@drawable/small_polaroid" />


    </LinearLayout>




</LinearLayout>